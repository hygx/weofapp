<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_rrtoyewx_recycleview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_rrtoyewx_recycleview_linearLayoutManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="linearLayoutManager" />

        <Button
            android:id="@+id/btn_rrtoyewx_recycleview_gridlayoutmanager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gridlayoutmanage" />

        <Button
            android:id="@+id/btn_rrtoyewx_recycleview_staggeredgridlayoutmanager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="staggeredgridlayoutmanager" />
        <Button
            android:id="@+id/btn_rrtoyewx_recycleview_addheaderview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addheadview" />

    </LinearLayout>
</RelativeLayout>