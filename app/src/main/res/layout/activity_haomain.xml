<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:sat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:text="延时的handle"
        android:onClick="click1"
        android:layout_height="wrap_content" />




    <com.example.weofapphao.wh.views.ShowFunctionInfo
        android:layout_width="match_parent"
        android:src="@mipmap/ic_launcher"
        sat:infotag= "1"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/softiv"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:onClick="click2"
            android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:text="软引用加载图片"
        android:onClick="click2"
        android:layout_height="wrap_content" />



    </FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:text="ObjectAnimation属性动画"
    android:onClick="click3"
    android:layout_height="wrap_content" />


    <Button
        android:layout_width="match_parent"
        android:text="扩大并且 变淡"
        android:onClick="click4"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="match_parent"
        android:text="组合 动画"
        android:onClick="click5"
        android:layout_height="wrap_content" />



    <Button
        android:layout_width="match_parent"
        android:text="炸炸炸"
        android:onClick="click6"
        android:layout_height="wrap_content" />


   <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="?attr/actionBarSize"
        ></android.support.v7.widget.Toolbar>







</LinearLayout>
